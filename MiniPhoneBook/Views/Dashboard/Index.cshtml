
@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>
<div class="row">
    <div class="col-md-3">
        <div class="card-counter primary">
            <i class="fa fa-code-fork"></i>
            <span class="count-numbers">@ViewBag.Total_People</span>
            <span class="count-name">Person</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card-counter danger">
            <i class="fa fa-ticket"></i>
            <span class="count-numbers">@ViewBag.Birthdays</span>
            <span class="count-name">Birthday's</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card-counter success">
            <i class="fa fa-database"></i>
            <span class="count-numbers">@ViewBag.Records_Updates</span>
            <span class="count-name">Records Updates</span>
        </div>
    </div>
</div>

